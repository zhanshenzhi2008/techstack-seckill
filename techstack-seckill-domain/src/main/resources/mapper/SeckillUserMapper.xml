<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.infrastructure.orjrs.SeckillUserMapper">

    <resultMap id="baseResultMap" type="com.orjrs.techstatck.seckill.domain.model.SeckillUser">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="user_name" property="userName" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, user_name, password, status
    </sql>

    <select id="getSeckillUserByUserName" resultMap="baseResultMap">
        select  <include refid="Base_Column_List" /> from seckill_user where user_name = #{userName}
    </select>
</mapper>
